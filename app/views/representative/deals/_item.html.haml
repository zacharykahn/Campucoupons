= content_tag_for(:li, item, :class => 'item') do
  .image= image_tag "placeholders/thumbnail_140_140.png"
  .details
    %header= item.title
    .coupons= link_to "Purchased #{item.coupons.count} times"
    .expires_in Expires in #{format_time_interval(item.expires_in)}
  %ul.menu
    %li= link_to "Edit", edit_representative_deal_path(item)
    %li= link_to "Delete", representative_deal_path(item), :method => :delete, :confirm => 'Are you sure?'
